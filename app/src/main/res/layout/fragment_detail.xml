<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vacancy"
            type="com.apps.findmyjob.model.Vacancy" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/detailRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DetailFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/rootLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewVacancyName"
                    style="@style/Accent"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vacancy.clearFromHtml(vacancy.jobName)}" />

                <TextView
                    android:id="@+id/textViewSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vacancy.clearFromHtml(vacancy.salary)}" />

                <TextView
                    android:id="@+id/textViewCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textColor="@color/colorPrimary"
                    android:text="@{vacancy.clearFromHtml(vacancy.company.name)}"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/textViewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vacancy.clearFromHtml(vacancy.addresses.address.get(0).location)}" />

                <TextView
                    android:id="@+id/textViewLabelDuty"
                    style="@style/Accent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Обязанности: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewDuty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vacancy.clearFromHtml(vacancy.duty)}" />

                <TextView
                    android:id="@+id/textViewLabelRequirement"
                    style="@style/Accent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Требования: "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewRequirement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{vacancy.clearFromHtml(vacancy.requirement.qualification)}" />
                    <!--android:text="@{vacancy.requirement.qualification}" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textViewLabelEducation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Образование: " />

                    <TextView
                        android:id="@+id/textViewEducation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{vacancy.clearFromHtml(vacancy.requirement.education)}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textViewLabelExperience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Опыт работы: " />

                    <TextView
                        android:id="@+id/textViewExperience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{vacancy.clearFromHtml(vacancy.requirement.experience)}" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/textViewLoadError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ошибка во время загрузки данных"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>